@model UrunTakipProjesi.Models.Urun

@{
    ViewData["Title"] = "Ürün Detayları";
}

<h2>Ürün Detayları</h2>

<div>
    <h4>Urun</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UrunAd)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UrunAd)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UrunFiyat)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UrunFiyat)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UrunAdet)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UrunAdet)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UrunPhoto)
        </dt>
        <dd class="col-sm-10">
            @if (Model != null && !string.IsNullOrEmpty(Model.UrunPhoto))
            {
                <img src="@Url.Content(Model.UrunPhoto)" alt="Ürün görseli" height="100" width="100" />
            }
            else
            {
                <span>No Image</span>
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Kategori.KategoriAd)
        </dt>
        <dd class="col-sm-10">
            @if (Model != null && Model.Kategori != null)
            {
                @Html.DisplayFor(model => model.Kategori.KategoriAd)
            }
            else
            {
                <span>No Category</span>
            }
        </dd>
    </dl>
</div>
<p>
    <a asp-action="Edit" asp-route-id="@Model?.UrunId" class="btn btn-primary">Düzenle</a> |
    <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
</p>
